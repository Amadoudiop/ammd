{% extends 'base_back.html.twig' %}

{% block body %}
<!-- header Page -->
<div class="row">
<div class="col-lg-12">
  <div class="card">
    <div class="card-body app-heading">
      <img class="profile-img" src="http://placehold.it/150x150">
      <div class="app-title">
        <div class="title"><span class="highlight">Dashboard</span></div>
        <div class="description">1023 Sold</div>
      </div>
    </div>
  </div>
</div>
</div>

    <h1>Abouts list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for about in abouts %}
            <tr>
                <td><a href="{{ path('about_show', { 'id': about.id }) }}">{{ about.id }}</a></td>
                <td>{{ about.title }}</td>
                <td>{{ about.content }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('about_show', { 'id': about.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('about_edit', { 'id': about.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('about_new') }}">Create a new about</a>
        </li>
    </ul>
{% endblock %}
