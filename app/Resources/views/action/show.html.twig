{% extends 'base.html.twig' %}
{% block body %}	
	<!-- Banner -->
	<div class="page-banner">
		<div class="container">
			<div class="parallax-mask"></div>
			<div class="section-name">
				<h2>{{ action.title|e }}</h2>
				<div class="short-text">
					<h5>Accueil<i class="fa fa-angle-double-right"></i>{{ action.title|e }}</h5>
				</div>
			</div>
		</div>
	</div>
	
	
	<!-- Causes Wrapper -->
	<div class="causes-page-wrapper single-cause">
		<div class="container">
			<div class="row cause">
				<div class="col-md-12">
					<div class="image-wrapper">
                        {% if action.media is not null %}
                    		<img class="img-responsive" src="{{ absolute_url(simple_directory) }}{{ action.media.name }}" alt="{{ action.media.alt }}">	
                    	{% endif %}				
                    </div>
					<div class="info-block">
		                {{ action.body|raw }}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
