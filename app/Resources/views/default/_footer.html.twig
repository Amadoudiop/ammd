 <div id="footerwrap">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                {% if options['copyright'] is defined %}
                	<h4>{{ options['copyright'] }}</h4>
                {% endif %}
            </div>
        
        </div>
    </div>
 </div>
