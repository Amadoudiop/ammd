{% extends 'base.html.twig' %}

{% block body %}
    <!-- Banner -->
    <div class="page-banner">
        <div class="container">
            <div class="parallax-mask"></div>
            <div class="section-name">
                <h2>{{ page.title }}</h2>
                <div class="short-text">
                    <h5>Accueil<i class="fa fa-angle-double-right"></i>{{ page.title }}</h5>
                </div>
            </div>
        </div>
    </div>
    
    <!-- about wrapper -->
    <div class="about-page-wrapper">
        <div class="description container">
            <div class="row ">
                <div class="col-md-12 ">
                    <div class="image-wrapper">
                        {% if page.media is not null %}
                            <img class="img-responsive" src="{{ absolute_url(simple_directory) }}{{ page.media.name }}" alt="{{ page.media.alt }}"> 
                        {% endif %} 
                    </div>
                </div>
                <div class="col-md-12 ">
                    <div class="about-right-text">
                        {{ page.body|raw }}
                        
                        {% if is_granted("ROLE_ADMIN") %}
                            <a href="{{ path('page_edit', { 'link': page.link }) }}" class="btn btn-big btn-solid "><i class="fa fa-archive"></i><span>Modifier</span></a>
                        {% endif %}


                    </div>
                </div>
            </div>
        </div>
    </div>







{% endblock %}
