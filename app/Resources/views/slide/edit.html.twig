{% extends 'base_back.html.twig' %}
{% block title %}{{ parent() }}Edit Slide{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body app-heading">
                    <img class="profile-img" src="http://placehold.it/150x150">
                    <div class="app-title">
                        <div class="title"><span class="highlight">Slide edit</span></div>
                        <div class="description">edit this slide</div>
                    </div>
                    <a href="{{ path('slide_new') }}">
                        <button type="button" class="btn btn-success">Add new Slide</button>
                    </a>
                    <a href="{{ path('slide_index') }}">
                        <button type="button" class="btn btn-info">
                            <i class="fa fa-reply" aria-hidden="true"></i>
                        </button>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    {{ form_start(delete_form) }}
                        <input type="submit" value="Delete" class="btn btn-danger">
                    {{ form_end(delete_form) }}
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            {% if slide.media is not null %}
                                <img id="preview_img" src="{{ absolute_url(simple_directory) }}{{ slide.media.name }}" class="img-responsive">
                            {% else %}
                                <img id="preview_img" src="http://www.placehold.it/1920x1080" class="img-responsive">
                            {% endif %}
                        </div>
                        <div class="col-md-6">
                            {{ form_start(edit_form) }}
                                {{ form_widget(edit_form) }}
                                <input type="submit" value="Edit" class="btn btn-warning">
                            {{ form_end(edit_form) }}                        
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
